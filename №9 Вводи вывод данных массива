import java.util.Scanner;
public class Massiw{
public static void  main(String[]args){
        int[] a = new int[5];
        int i = 0;
        Scanner in = new Scanner(System.in);

        for (int element : a) {

            System.out.print("Введите " + (i + 1) + "-й элемент массива: ");
            a[i] = in.nextInt();

            System.out.println(a[i]);

            i++;
        }

        for (int element : a)

            System.out.print(element*2 + " ");

    }
        }
